<div class="headerpane bg-[--foreground-base] box-border fixed">
    {{#if createView}}
        <h1>
            {{#each meta.panels}}
                {{#each fields}}
                    <span class="record-cell" data-type="{{type}}" data-name="{{name}}">
                        {{field ../../this model=../../this.model template=../../this.action}}
                    </span>
                {{/each}}
            {{/each}}
            <div class="btn-toolbar">
                {{#each meta.buttons}}
                    {{field ../this model=../this.model template="detail"}}
                {{/each}}
            </div>
        </h1>
    {{else}}
        {{#each meta.panels}}
            {{#if ../../dashboardTitle}}
                <h1 class="dashboardtitle">
                    {{#each ../fields}}
                        <span class="record-cell" data-type="{{type}}" data-name="{{name}}" rel="tooltip">
                            {{field ../../../this model=../../../this.model template=../../../this.action}}
                        </span>
                    {{/each}}
                </h1>
            {{/if}}
        {{/each}}

        <div class="action-button-wrapper flex px-4">
        {{#each layout.meta.actionButtons}}
            {{#if decodedOptions.settings.displayOnFocusDashboard}}
                {{field ../../this}}
            {{/if}}
        {{/each}}
        </div>
    {{/if}}
</div>

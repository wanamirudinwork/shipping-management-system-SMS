<tr name="{{model.module}}_{{model.cid}}" data-group-id="{{groupId}}" record-id="{{model.id}}"
    class="quote-data-group-list product-row ltr:[&>td:not(:first-child)]:left-[72px] rtl:[&>td:not(:first-child)]:right-[72px] {{#if model.id}} sortable ui-sortable{{else}} not-sortable{{/if}}">
    <td class="absolute bg-[--foreground-base] box-border focus-within:z-30 ltr:sticky-border-tl rtl:sticky-border-tr ltr:stick-left rtl:stick-right z-10">
        <span class="action-button-wrapper inset-0 left-column-save-cancel">
            {{#each view.leftSaveCancelColumn}}
                {{field ../view model=../model template=../view.viewName}}
            {{/each}}
        </span>
        <span class="action-button-wrapper inset-0 left-column-buttons">
            {{#each view.leftColumns}}
                {{field ../view model=../model template=../view.viewName}}
            {{/each}}
        </span>
    </td>
    {{#each fields}}
        <td class="relative" data-type="{{type}}">
            {{field ../view model=../model template=../view.viewName}}
        </td>
    {{/each}}
</tr>

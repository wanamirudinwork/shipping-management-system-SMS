<div class="p-3">
    {{#each metrics}}
        {{partial 'metric' ../this this}}
    {{/each}}
    <div class="metric-descriptions-container absolute right-0 hide w-11/12 max-w-[37.5rem] h-5/6 max-h-[18.75rem] bg-[--alert-background] background-image-stack border-[--dropdown-border-widget] rounded-t-0 rounded-b-md shadow-xl overflow-auto">
        <div class="relative flex flex-row items-center justify-between bg-transparent px-3 py-1.5 font-bold text-xs">
            {{str 'LBL_PIPELINE_METRICS_DASHLET_METRICS_GUIDE' 'Forecasts'}}
            <button class="metric-descriptions-close bg-transparent p-0">
                <i class="{{buildIcon 'sicon-close'}} hover:color-[--sicon-hover-color]"></i>
            </button>
        </div>
        <div class="border-b border-[--border-color-light]"></div>
        <div class="bg-transparent px-3 py-1.5">
            {{partial 'metric-descriptions' this this}}
        </div>
    </div>
</div>

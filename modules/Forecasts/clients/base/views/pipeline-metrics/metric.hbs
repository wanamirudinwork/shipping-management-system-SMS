<div class="inline-flex flex-col box-border w-30 h-30 border border-[--border-color-light] rounded-md p-2 mr-2.5 mb-2.5
            {{#if loading}}metric-skeleton-loader{{/if}} plm-{{name}}">
    <span class="ellipsis_inline text-xs text-label" data-bs-placement="bottom" title="{{str label ../module}}">
        {{str label ../module}}
    </span>
    <div class="flex flex-col flex-grow items-center justify-center relative">
        <span class="ellipsis_inline max-w-full text-center text-base font-semibold">
            {{results.value}}
        </span>
        {{#if results.convertedValue}}
            <span class="ellipsis_inline max-w-full bg-[--label-background] rounded-sm text-center text-xs font-semibold px-1">
                {{results.convertedValue}}
            </span>
        {{/if}}
        {{tooltipTemplate (str results.tooltip) 'bottom'}}
    </div>
</div>

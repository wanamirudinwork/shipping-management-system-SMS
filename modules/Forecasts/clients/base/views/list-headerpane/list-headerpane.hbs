<div class="headerpane listheaderpane bg-[--foreground-base] block box-border fixed px-3 pt-4 pb-2">
    <div class="box inline-block pull-left mx-2 -mt-2">
        {{moduleLabel 'Forecasts' 'lg' class='ltr:ml-1 rtl:mr-1'}}
    </div>
    <div class="box user font-normal inline-block pull-left">
        <span class="module-title max-w-[300px] overflow-hidden text-ellipsis whitespace-nowrap">{{{title}}}</span>
        {{#each meta.tree}}
            {{field ../this}}
        {{/each}}
    </div>

    <div class="box quarter-picker font-normal inline-block mx-4 pull-left">
        {{#each this.meta.timeperiod}}
            {{field ../this model=../this.tpModel}}
        {{/each}}
    </div>

    <div class="box datapoints font-normal inline-block mx-2 pull-right">
        {{#each this.meta.header-datapoints}}
            {{field ../this model=../this.model}}
        {{/each}}
    </div>

    <div class="box btn-toolbar dropdown font-normal inline-block">
        {{#each meta.buttons}}
            {{field ../this}}
        {{/each}}
    </div>
</div>

<table class="table" id="fields_table">
    <thead>
        <tr class="headerRow">
            {{#if headerLabels}}
                <th data-field="state" data-checkbox="true" class="checkAll">
                    <input type="checkbox" class="selection" rel="tooltip"
                           aria-label="{{str 'LBL_PACKAGE_BUILDER_TAB_CUSTOMIZATIONS_SELECT_ALL' this.module}}" />
                </th>
                {{#each headerLabels}}
                    <th id="{{@index}}" class="sorting">
                        <span>{{str this 'Administration'}}</span>
                    </th>
                {{/each}}
            {{/if}}
        </tr>
        <tr>
            <th data-target="alert-container" class="!bg-[--tab-background-hover-color] alert-warning hide" colspan="100%">
                <div class="alert-list-contents flex items-center justify-center left-0 mt-0 p-2.5 h-1.5 sticky top-0" data-target="alert">
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
    {{#each tableContext.attributes.collection.models}}
        <tr class="regularRow" data-id="{{getValueByIndex this.attributes '_id'}}">
            <td>
                <input type="checkbox" class="selection"
                       aria-label="{{str 'LBL_PACKAGE_BUILDER_TAB_CUSTOMIZATIONS_SELECT_CHECKBOX' ../../module}}" />
            </td>
            {{#each attributes}}
                {{#notEq @key '_id'}}
                    {{#wciFormatEntryValue this ../../title}}
                        <td>{{this}}</td>
                    {{/wciFormatEntryValue}}
                {{/notEq}}
            {{/each}}
        </tr>
    {{/each}}
    </tbody>
</table>

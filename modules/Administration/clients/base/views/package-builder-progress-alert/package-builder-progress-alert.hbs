<div class="alert-page-overlay mt-[50px]">
    <div class="alert alert-info alert-block rounded-md shadow-lg bg-[--alert-background] m-auto z-[1060]">
        <div class="alert-content text-center pt-5">
            <div class="indicator alert-status"></div>
            <span class="text loading loading-admin">
                <span id="ci-progress-lbl">
                    <strong>{{initialTitle}}</strong>
                    <i class="l1">&#46;</i>
                    <i class="l2">&#46;</i>
                    <i class="l3">&#46;</i>
                </span>
                <span id="ci-progress-success-lbl" style="display:none">
                    <strong>{{successTitle}}</strong>
                </span>
                <span id="ci-progress-error-lbl" style="display:none">
                    <strong>{{errorTitle}}</strong>
                </span>
            </span>

            <div class="pt-0 pl-2.5 pb-0 pr-2.5">
                <h5>0%</h5>
                <div class="progress">
                    <div class="bar w-0"></div>
                </div>

                <div class="text-left mt-5 ml-0 mb-2.5 mr-0">
                    <a href="#" onclick="return (function(e) {
                            el = $(e).parent().find('pre');
                            el.toggle();
                            el.scrollTop(function() { return this.scrollHeight; });
                            $(e).parent().find('i').toggleClass('sicon-chevron-down').toggleClass('sicon-chevron-up');
                            return false;
                        })(this)">{{str 'LBL_PACKAGE_BUILDER_DISPLAY_LOG' 'Administration'}}</a>
                    <i class="sicon sicon-chevron-down"></i>
                    <pre class="max-h-[150px] overflow-auto mt-4"></pre>
                </div>
            </div>
            <button class="indicator alert-close" style="display:none"
                onclick="return (function(e) {
                            $(e).closest('.alert').parent().remove();
                            return false;
                        })(this)">{{str 'LBL_PACKAGE_BUILDER_CLOSE' 'Administration'}}</button>
        </div>
    </div>
</div>

<div class="timeline-config ml-5 mr-5 full-width">
    <h5>{{str 'TPL_ACTIVITY_TIMELINE_SETTINGS_LIMIT_LABEL' module}}</h5>
    {{#if availableModules}}
        <div class="timeline-alert hidden">
            {{str 'TPL_ACTIVITY_TIMELINE_SETTINGS_LIMIT_ALERT' module}}
        </div>
        {{#each availableModules}}
            <div class="row-fluid">
                <label>
                    <input type="checkbox" name="{{link}}" data-link="{{link}}" {{#has link ../enabledModules}} checked{{/has}}>
                    {{label}}
                </label>
            </div>
        {{/each}}
    {{else}}
        <h4 class="label label-info text-base text-left">{{str 'LBL_ACTIVITY_TIMELINE_SETTINGS_NO_AVAILABLE_MODULES' module}}</h4>
    {{/if}}
</div>

{{!-- File selector --}}
<div class="file-select{{#if value.length}} hidden{{/if}}">
    <label class="btn file-selector p-0 m-0 border border-[--border-base] rounded-sm w-full h-full">
        <span class="border border-[--border-base] rounded-sm p-1 ml-1">{{str 'LBL_ADD_ATTACHMENT' module}}</span>
        <input id="{{cid}}" name="{{name}}" data-action="selectFile" class="opacity-0" type="file">
    </label>

    <div class="external-api-direction-selector">
        {{partial 'edit-api-direction-selector' this this}}
    </div>
</div>

{{!-- File name display --}}
<div class="file-name">
    {{partial 'edit-filename' this this}}
</div>
{{#unless hideHelp}}{{#if def.help}}<p class="help-block">{{str def.help module}}</p>{{/if}}{{/unless}}

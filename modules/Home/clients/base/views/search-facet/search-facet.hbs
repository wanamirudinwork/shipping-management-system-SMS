<div class="row-fluid">
    <ul class="nav{{#unless collection.dataFetched}} loading{{/unless}}">
        {{#if collection.dataFetched}}
            {{#if facetItems}}
                {{#each facetItems}}
                    <li class="cursor-pointer group-[.disabled]/search-facet:text-gray-500 group-[.disabled]/search-facet:cursor-default flex items-center px-3 py-1.5 select-none text-sm group/facet-item [&.selected]:font-bold {{#if selected}} selected{{/if}}" data-facet-criteria="{{key}}">
                        {{#eq ../meta.facet_id 'modules'}}
                            {{moduleLabel key 'sm' class='group-[:not(.selected)]/facet-item:bg-transparent group-[:not(.selected)]/facet-item:text-[--sicon]'}}
                            <span class="ml-2">{{label}} ({{count}})</span>
                        {{else}}
                            <i class="{{buildIcon 'sicon-check'}} h-6 text-xs w-6 invisible group-[.selected]/facet-item:visible"></i>
                            <span class="ml-2">{{label}} ({{count}})</span>
                        {{/eq}}
                    </li>
                {{/each}}
            {{else}}
                <li class="flex items-center px-3 py-1.5 text-sm"><span>{{str 'LBL_FACET_NO_DATA' }}</span></li>
            {{/if}}
        {{else}}
            <li class="flex items-center px-3 py-1.5 text-sm">{{loading 'LBL_LOADING_NO_DOTS'}}</li>
        {{/if}}
    </ul>
</div>

<div class="dashlet-group-edit w-full">
    <div class="flex flex-row pt-2.5 pb-2.5 pl-2.5 pr-2.5">
        <div class="flex-grow">
            <h5 class="m-0"><b>{{str fieldDef.vname targetModule}}{{#if isRelate}}({{targetFieldModule}}){{/if}}</b></h5>
            <h5 class="m-0">({{dashletLabel}})</h5>
        </div>
        <i
            class="sicon sicon-close dashlet-group-remove-field"
            data-action="remove-field"
            rel="tooltip"
            data-bs-placement="bottom"
            data-original-title="{{str 'LBL_DASHLET_REMOVE_LABEL'}}"
            data-field-name="{{fieldName}}"
            data-dashlet-id="{{dashletId}}"
            data-target-module="{{targetModule}}"
        ></i>
    </div>
</div>

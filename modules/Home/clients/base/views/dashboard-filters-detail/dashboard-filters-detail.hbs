<div class="filters-skeleton-loader hidden h-full min-h-[6.25rem] w-full"></div>
<div class="flex flex-col h-full items-center dashboard-filters-detail-container">
    <div class="flex flex-row ml-1.5 w-full">
        <h4 class="flex-grow pl-2 font-bold">
            {{str "LBL_DASHBOARD_FILTERS" module}}
        </h4>
        <div class="btn-toolbar pl-0 pr-2 mt-1 hidden" data-action="show-edit-button">
            <span class="dashlet-toolbar">
                <a rel="tooltip" data-action="switch-to-edit" data-bs-placement="left" aria-label="{{str "LBL_EDIT_FILTERS" module}}" data-panelaction="createNewGroup" class="btn btn-invisible" data-original-title="{{str "LBL_EDIT_FILTERS" module}}" tabindex="-1">
                    <i class="sicon sicon-edit"></i>
                </a>
            </span>
        </div>
    </div>
    <div class="flex flex-row items-center m-0.75 ml-2.5 mr-2.5 mb-2.5 mt-2.5 apply-button-container" data-container="apply-filters-container">
        <button disabled class="ml-0 btn btn-primary apply-filters-btn disabled !text-sm w-full" type="button" data-action="apply-runtime-filters">
            {{str "LBL_APPLY_FILTERS"}}
        </button>
    </div>
    <div class="flex flex-col items-center w-30 mt-2.5" data-container="add-filter-container">
        <div class="text-center max-width-5" data-container="no-filter-container">
            <h5 class="w-25">{{str "LBL_NO_DASHBOARD_FILTER" module}}</h5>
        </div>
        <div class="flex flex-row items-center mt-2 apply-button-container" data-container="add-container">
            <button class="ml-0 btn btn-primary apply-filters-btn text-sm w-full" type="button" data-action="add-first-filter">
                {{str "LBL_ADD_FILTER" module}}
            </button>
        </div>
    </div>
    <div class="report-filters-container h-full w-full overflow-y-auto overflow-x-hidden" data-container="group-filters-container">
    </div>
</div>

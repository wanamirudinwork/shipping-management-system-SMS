<div class="dashboard" data-dashboard="true">
    <div class="cols row-fluid">
        <div>
            <div class="preview-headerbar">
                <div class="headerpane bg-[--foreground-base] box-border fixed">
                    <h1>
                        <span class="record-cell">
                            <h1 class="help-pane-title"><span class="detail">{{str "LBL_HELP"}}</span></h1>
                        </span>
                        <span class="record-cell">
                            <span class="detail"></span>
                        </span>
                    </h1>
                </div>
            </div>
        </div>
        <ul class="dashlets row-fluid">
            <li class="span12">
                <ul class="dashlet-cell rows row-fluid">
                    <li
                        class="dashlet-container span12 ui-droppable h-full rounded-md mx-2 my-1 p-0 hover:shadow-md bg-[--foreground-base]"
                    >
                        <div>
                            <div class="dashlet h-full flex flex-col ui-draggable" data-type="dashlet" data-action="droppable">
                                <div data-dashlet="toolbar">
                                    <div class="dashlet-header border-b border-[--border-base] dark:border-none">
                                        <div class="btn-toolbar pull-right">
                                        </div>
                                        <h4 data-toggle="dashlet" class="dashlet-title text-initial">{{title}}</h4>
                                    </div>
                                </div>
                                <div data-dashlet="dashlet" class="dashlet-content flex-grow">
                                    <div>
                                        <div class="help-dashlet-content px-2 py-1">
                                            <div class="help-more">{{{more_help}}}</div>
                                            <div class="help-body pt-3">{{nl2br body}}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>

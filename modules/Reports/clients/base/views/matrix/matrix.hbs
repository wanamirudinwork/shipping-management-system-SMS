{{#if _hasData}}
    <table class="table table-striped table-bordered w-full table-condensed matrix-report-table">
        <tbody>
            {{#each _matrixTable}}
                <tr>
                    {{#each this}}
                        {{#if bold}}
                            <th class="matrix-data-table-cell !align-middle !p-2.5 !text-center {{#if grandTotal}}matrix-data-table-cell-accent{{/if}}" rowspan="{{rowspan}}" colspan="{{colspan}}">
                                {{#sanitize}}
                                    {{{value}}}
                                {{/sanitize}}
                            </th>
                        {{else}}
                            <td class="matrix-data-table-cell !align-middle !p-2.5 !text-center{{#if grandTotal}}matrix-data-table-cell-accent {{/if}}" rowspan="{{rowspan}}" colspan="{{colspan}}">
                                {{#sanitize}}
                                    {{{value}}}
                                {{/sanitize}}
                            </td>
                        {{/if}}
                    {{/each}}
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <div class="matrix-data-table-cell align-middle h-full p-2.5 text-center">
        {{str 'LBL_NO_DATA_AVAILABLE'}}
    </div>
{{/if}}

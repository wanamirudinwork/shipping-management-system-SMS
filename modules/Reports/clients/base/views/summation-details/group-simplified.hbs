<table class="simplified-table report-item-border-thick clear-both m-0 w-full">
    {{!--Display group header--}}
    {{#each groupBy}}
        <tr class="{{#if @first}}group{{else}}subgroup{{/if}} single">
            <td class="{{#if @first}}simplified-summary-table-group-header{{else}}simplified-summary-table-subgroup-header{{/if}}" colspan="{{../colspan}}">
                {{#if @first}}
                    <i class="sicon sicon-arrow-left-double rtl:-scale-x-100 up" groupid="{{../groupId}}"></i>
                {{/if}}
                {{#sanitize}}
                    {{{this}}}
                {{/sanitize}}
            </td>
        </tr>
    {{/each}}
    <tr>
        <td>
            <table class="w-full report-item-border-thick" data-table="group-body">
                {{!--Display soubgroups--}}
                {{#each subgroups}}
                    {{#if header.length}}
                    {{!--Display soubgroup header--}}
                        {{#each header}}
                            {{#if this}}
                                <tr class="subgroup single">
                                    <th class="simplified-summary-table-subgroup-header pl-4 text-left" colspan="{{../../../../colspan}}">
                                        {{#sanitize}}
                                            {{{this}}}
                                        {{/sanitize}}
                                    </th>
                                </tr>
                            {{/if}}
                        {{/each}}
                    {{/if}}
                    {{!--Display list normal header--}}
                    <tr class="subgroup single">
                        {{partial 'row-header-simplified' ../templateComponent view=../templateComponent fields=../../fields}}
                    </tr>
                    {{!--need to render collection for each soubgroup--}}
                    {{#each records}}
                        <tr class="single">
                            {{#each this}}
                                <td class="wrap-report-text bg-[--foreground-base] overflow-hidden pl-1">
                                    <div class="ellipsis_inline" data-bs-placement="bottom" data-html="true" data-original-title="{{this}}">
                                        {{#sanitize}}
                                            {{{this}}}
                                        {{/sanitize}}
                                    </div>
                                </td>
                            {{/each}}
                        </tr>
                    {{/each}}
                {{/each}}
            </table>
        </td>
    </tr>
</table>

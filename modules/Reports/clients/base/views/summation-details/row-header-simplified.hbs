    {{#each view._fields.visible}}
        <th class="text-left pl-1 sortable sorting{{#eq ../view.orderBy.field name}}_{{../../view.orderBy.direction}}{{/eq}} orderBy{{name}}" data-tablekey="{{column_key}}" class="{{#if widthClass}} {{widthClass}}{{/if}}"
            {{#if styles}} style="{{styles}}"{{/if}}
            {{#if name}} data-fieldname="{{name}}" data-realname="{{rname}}"{{/if}} data-orderby="{{orderBy}}">

            <div class="flex flex-row items-center w-max p-1">
                <span class="cursor-pointer hover:underline">
                    {{#if labelValue}}
                        {{labelValue}}
                    {{else}}
                        {{str vname module}}
                    {{/if}}
                </span>
                <span class="ml-1">
                    <i class="sicon sicon-arrow-up {{#eq ../view.orderBy.field name}}{{#eq ../../view.orderBy.direction 'asc'}}text-[--text-base] font-bold{{/eq}}{{/eq}}"></i>
                    <i class="sicon sicon-arrow-down {{#eq ../view.orderBy.field name}}{{#eq ../../view.orderBy.direction 'desc'}}text-[--text-base] font-bold{{/eq}}{{/eq}}"></i>
                </span>
            </div>
        </th>
    {{/each}}

<div class="headerpane report-preview-headerpane bg-[--foreground-base] box-border table w-full">
    <h1>
        <span class="record-cell">
            <span>
                {{_reportName}}
            </span>
        </span>
        <div class="report-header-padding btn-toolbar pull-right">
            <input class="btn btn-secondary mr-4 mt-2 close-report-preview" value="{{str 'LBL_CLOSE_BUTTON_LABEL'}}" type="button" data-action="close-report-preview">
        </div>
    </h1>
</div>
{{#if _showQuery}}
    <table class="w-full mb-5">
        {{#each _queries}}
            <tr>
                <td class="align-left">
                    <b>{{str 'LBL_REPORT_QUERY'}}:</b>
                </td>
            </tr>
            <tr>
                <td class="align-left">
                    <pre>{{this}}</pre>
                </td>
            </tr>
        {{/each}}
    </table>
{{/if}}

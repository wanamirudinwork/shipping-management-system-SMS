<tr name="{{module}}_{{model.id}}" class="single">
    {{#each model}}
        <td class="wrap-report-text bg-[--foreground-base] overflow-hidden {{#if align}}{{align}}{{/if}}{{#if ../view.isFirstColumnFreezed}}{{#if @first}} sticky {{#eq ../../../view.leftColumns.length 0}} ltr:left-0 rtl:right-0{{/eq}}{{/if}}{{/if}}" data-type="{{type}}">
            <div class="ellipsis_inline" data-bs-placement="bottom" data-html="true" data-original-title="{{this}}">
                {{#sanitize}}
                    {{{this}}}
                {{/sanitize}}
            </div>
        </td>
    {{/each}}
    {{#each view.rightColumns}}
            <td class="bg-[--foreground-base] sticky ltr:stick-right rtl:stick-left ltr:right-0 rtl:left-0 z-10"></td>
    {{/each}}
</tr>

{{#if collection.dataFetched}}
    {{#if ../collection.length}}
        {{#notEq pagesCount "-1"}}
            <div class="list-pagination w-full" aria-label="page-navigation">
                <div class="pagination-items pagination-fit-content-width">
                    <button data-action="paginate-prev" class="btn paginate-prev{{#eq page '1'}} disabled{{/eq}}">
                        <i class="sicon sicon-chevron-left rtl:-scale-x-100"></i>
                    </button>

                    <input class="current-page" value="{{page}}" {{#eq pagesCount 1}}disabled{{/eq}}
                           data-action="paginate-input" data-focus-expect="{{pageInputFocusExpect}}" />

                    <span>{{str 'LBL_LIST_PAGINATION_OF'}}</span>
                    {{#if pagesCount}}
                        <span>{{pagesCount}}</span>
                    {{else}}
                        {{#if isLoadingCount}}
                            <span class="loading-count">{{str 'LBL_LOADING'}}</span>
                        {{else}}
                            <button class="btn page-count" name='page-count' rel="tooltip"
                                    title="{{str 'LBL_GET_PAGE_COUNT_TOOLTIP'}}">
                                ...
                            </button>
                        {{/if}}
                    {{/if}}

                    <button data-action="paginate-next" class="btn paginate-next{{#eq page pagesCount}} disabled{{/eq}}">
                        <i class="sicon sicon-chevron-right rtl:-scale-x-100"></i>
                    </button>
                    <span class="ml-2 reports-collection-count" data-container="collection-count-widget-container"></span>
                </div>
            </div>
        {{/notEq}}
        {{#eq pagesCount "-1"}}
            {{#if totalCount}}
                <span class="mt-2 ml-2 reports-collection-count font-bold">
                    {{str 'LBL_TOTAL_COUNT' 'Reports'}}: {{totalCount}}
                </span>
            {{/if}}
        {{/eq}}
    {{/if}}
{{else}}
    <div class="block-footer">
        {{loading 'LBL_ALERT_TITLE_LOADING'}}
    </div>
{{/if}}

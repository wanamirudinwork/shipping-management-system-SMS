<div class="reports-runtime-widget mb-3" data-tooltip="runtime-filter-widget-container" rel="tooltip">
    <div class="reports-runtime-widget-body">
        <div class="report-runtime-widget-header">
            <div class="runtime-filter-toolbar flex flex-row items-center p-0.75 ui-draggable-handle" data-tooltip="filter-summary" rel="tooltip">
                <h5 data-toggle="dashlet" class="runtime-filter-title flex-grow m-0 ml-1.5 whitespace-nowrap">{{_targetModuleLabel}} > <div class="font-bold">{{str _targetField.vname _targetModule}} <span class='items-selected-nr'></span></div></h5>
                <div class="btn-toolbar ml-4 !my-0 pl-0">
                    <span class="dashlet-toolbar">
                        <a rel="tooltip" data-bs-placement="bottom" aria-label="{{str 'LBL_DASHLET_TOGGLE'}}" data-panelaction="toggleCollapse" class="btn btn-invisible panel-toggle minify" data-original-title="{{str 'LBL_DASHLET_TOGGLE'}}">
                            <i class="sicon sicon-chevron-up"></i>
                        </a>
                    </span>
                </div>
            </div>
            <div class="flex-row items-center m-0.75 ml-2.5 mb-0 pb-0.25" data-tooltip="filter-summary" rel="tooltip">
                <span>
                    <h5 class="runtime-filter-summary-text overflow-hidden w-full"></h5>
                </span>
            </div>
        </div>
        <div class="flex flex-row items-center m-2 ml-2.5 mr-2.5" data-container="operators-container">
            <select class="runtime-filter-select w-full" data-fieldname="runtime-qualifier">
                {{#each _operators}}
                    <option value="{{@key}}" {{#eq ../_filterData.qualifier_name @key}}selected{{/eq}}>
                        {{str this 'Reports'}}
                    </option>
                {{/each}}
            </select>
        </div>
        {{#if _inputType}}
            <div data-container="input-container">
                {{#eq _inputType 'relate'}}
                    <div class="items-center m-2 ml-2.5 mr-2.5" data-container="relate-input-container"></div>
                {{else}}
                    {{partial _inputType this data=this}}
                {{/eq}}
            </div>
        {{/if}}
    </div>
</div>

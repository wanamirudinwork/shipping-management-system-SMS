<div class="modal rounded-md" data-content="report-copy-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-transparent flex items-center justify-between p-0">
                <h4 class="modal-title font-semibold text-base text-[--text-base] m-0 ltr:ml-4 rtl:mr-4">{{str "LBL_COPY_AS" module}}</h4>
                <button class="bg-transparent text-xl" type="button" data-bs-dismiss="modal">
                    <i class="sicon sicon-close p-1"></i>
                </button>
            </div>
            {{#if this._isReady}}
                <div class="modal-body p-0">
                 <div class="detail-content pt-2.5 pb-1">
                    <div class="row-fluid report-active-hover flex hover:cursor-pointer hover:bg-[--tab-background-hover-color]" data-type="tabular">
                        <div class="span2">
                            <span class="sicon sicon-rows-and-columns-xxl report-copy-modal-icon h-full ltr:mr-5 rtl:ml-5 text-center text-7xl"></span>
                        </div>
                        <div class="span10 report-copy-modal-text ltr:pl-2 ltr:pr-12 rtl:pr-2 rtl:pl-12">
                                <p class="font-semibold text-base">{{str "LBL_ROWS_AND_COLUMNS_REPORT" module}}
                                    {{#eq _currentRecordType "tabular"}}
                                        <h7 class="report-copy-modal-current-record">{{str "LBL_CURRENT_REPORT_TYPE" module}}</h7>
                                    {{/eq}}
                                </p>
                                <p>{{str "LBL_ROWS_AND_COLUMNS_REPORT_DESC" module}}</p>
                        </div>
                    </div>
                    <div class="row-fluid report-active-hover flex hover:cursor-pointer hover:bg-[--tab-background-hover-color] pt-2" data-type="summation">
                        <div class="span2">
                            <span class="sicon sicon-summation-xxl report-copy-modal-icon h-full ltr:mr-5 rtl:ml-5 text-center text-7xl"></span>
                        </div>
                        <div class="span10 report-copy-modal-text ltr:pl-2 rtl:pr-2">
                                <p class="font-semibold text-base">{{str "LBL_SUMMATION_REPORT" module}}
                                    {{#eq _currentRecordType "summary"}}
                                        <h7 class="report-copy-modal-current-record">{{str "LBL_CURRENT_REPORT_TYPE" module}}</h7>
                                    {{/eq}}
                                </p>
                                <p>{{str "LBL_SUMMATION_REPORT_DESC" module}}</p>
                        </div>
                    </div>
                    <div class="row-fluid report-active-hover flex hover:cursor-pointer hover:bg-[--tab-background-hover-color] pt-2" data-type="summation_with_details">
                        <div class="span2">
                            <span class="sicon sicon-summation-details-xxl report-copy-modal-icon h-full ltr:mr-5 rtl:ml-5 text-center text-7xl"></span>
                        </div>
                        <div class="span10 report-copy-modal-text ltr:pl-2 ltr:pr-7 rtl:pr-2 rtl:pl-7">
                                <p class="font-semibold text-base">{{str "LBL_SUMMATION_REPORT_WITH_DETAILS" module}}
                                    {{#eq _currentRecordType "detailed_summary"}}
                                        <h7 class="report-copy-modal-current-record">{{str "LBL_CURRENT_REPORT_TYPE" module}}</h7>
                                    {{/eq}}
                                </p>
                                <p>{{str "LBL_SUMMATION_REPORT_WITH_DETAILS_DESC" module}}</p>
                        </div>
                    </div>
                    <div class="row-fluid report-active-hover flex hover:cursor-pointer hover:bg-[--tab-background-hover-color] pt-2" data-type="matrix">
                        <div class="span2">
                            <span class="sicon sicon-matrix-xxl report-copy-modal-icon h-full ltr:mr-5 rtl:ml-5 text-center text-7xl"></span>
                        </div>
                        <div class="span10 report-copy-modal-text ltr:pl-2 ltr:pr-10 rtl:pr-2 rtl:pl-10">
                                <p class="font-semibold text-base">{{str "LBL_MATRIX_REPORT" module}}
                                    {{#eq _currentRecordType "Matrix"}}
                                        <h7 class="report-copy-modal-current-record">{{str "LBL_CURRENT_REPORT_TYPE" module}}</h7>
                                    {{/eq}}
                                </p>
                                <p>{{str "LBL_MATRIX_REPORT_DESC" module}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="modal-body report-modal-height p-0">
                    <div class="report-loading-screen-overlay" data-widget="report-loading" data-type="copy-modal">
                    <i class="sicon sicon-refresh sicon-is-spinning report-loading-icon"></i>
                    <h4 class="report-loading-label">{{str "LBL_LOADING"}}</h4>
                </div>
            {{/if}}
            </div>
        </div>
    </div>
</div>

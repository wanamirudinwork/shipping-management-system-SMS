<div class="headerpane bg-[--foreground-base] box-border fixed">
    <h1 class="justify-between">
        {{#each meta.fields}}
            <div class="record-cell edit">
                <div class="record-cell-wrapper">
                    <span class="metric-tab-name">
                        {{str label ../this.module}}
                    </span>
                    <span class="normal">
                        {{field ../this model=../this.model template=../this.action}}
                    </span>
                </div>
            </div>
        {{/each}}
        <div class="btn-toolbar dropdown">
            {{#each meta.buttons}}
                {{field ../this}}
            {{/each}}
        </div>
    </h1>
</div>

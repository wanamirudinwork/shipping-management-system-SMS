<div class="config-tab-settings-all">
    {{#each collection.models}}
        <div class="config-tab-settings">
            {{!-- left column --}}
            <div class="column">
                {{#each ../meta.left-panels}}
                    <h4>
                        {{str label ../../this.module}}
                    </h4>
                    {{#each fields}}
                        <div class="row-fluid">
                            {{#if label}}
                                <div class="record-label pipeline-record-label" data-name="{{name}}">
                                    <h5>
                                        {{str label ../../../../this.module}}
                                    </h5>
                                </div>
                            {{/if}}
                            <span class="normal">
                                {{field ../../../this model=../../this template="edit"}}
                            </span>
                        </div>
                    {{/each }}
                {{/each }}
            </div>

            {{!-- right column --}}
            <div class="column">
                {{#each ../meta.right-panels}}
                    <h4>
                        {{str label ../../this.module}}
                    </h4>
                    {{#each fields}}
                        <div class="row-fluid">
                            {{#if label}}
                                <div class="record-label pipeline-record-label" data-name="{{name}}">
                                    <h5>
                                        {{str label ../../../../this.module}}
                                    </h5>
                                </div>
                            {{/if}}
                            <span class="normal">
                                {{field ../../../this model=../../this template="edit"}}
                            </span>
                        </div>
                    {{/each }}
                {{/each }}
            </div>
        </div>
    {{/each }}
    <div class="row-fluid">
        <div class="metric-config-instructions">
            <ul>
                <li>{{str 'LBL_REORDER_OR_REMOVE' 'Metrics'}}</li>
                <li>
                    <a href="javascript:void(0)" class="restore-defaults-btn">{{str 'LBL_CLICK_HERE' 'Metrics'}}</a>
                    {{#if isAdmin}}
                        {{str 'LBL_RESTORE_DEFAULT' 'Metrics'}}
                    {{else}}
                        {{str 'LBL_RESTORE_ADMIN_DEFAULT' 'Metrics'}}
                    {{/if}}
                </li>
            </ul>
        </div>
    </div>
</div>

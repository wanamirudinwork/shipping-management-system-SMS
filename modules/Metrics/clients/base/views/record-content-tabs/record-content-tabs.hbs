<div class="accordion-inner">
    <div id="tabs" class="">
        <ul class="ul nav nav-tabs">
            <li class="tab tab-badgeable">
                <a href="#settings">
                    <span class="tab-title font-semibold">{{str 'LBL_SETTINGS' this.module}}</span>
                </a>
            </li>
            <li class="tab tab-badgeable">
                <a href="#list_layout">
                    <span class="tab-title font-semibold">{{str 'LBL_LIST_LAYOUT' this.module}}</span>
                </a>
            </li>
        </ul>

        <div id="settings" class="record">
            {{#each meta.settings}}
                <div class="row-fluid record-panel {{#if hide}}folded{{/if}}" data-panelName="{{name}}">
                    {{#if hide}}
                        <button class="btn-link btn-invisible btn-toggle more">
                            {{str label ../../this.module}}&hellip;
                        </button>
                    {{/if}}
                    <div class="row-fluid record-panel-content">
                        {{#each fields}}
                            <div class="row-fluid">
                                <div class="span{{#if span}}{{span}}{{else}}6{{/if}} record-cell edit">
                                    <div class="labels-on-side">
                                        <div class="record-label-wrapper span2">
                                            {{#if label}}
                                            {{#unless dismiss_label}}
                                            <div class="record-label" data-name="{{../name}}">
                                                <span class="text-overflow">{{str label ../../../../this.module}}</span>
                                            </div>
                                            {{/unless}}
                                            {{/if}}
                                        </div>
                                        <div class="record-link-wrapper span4">
                                                <span class="normal">
                                                {{#if readonly}}
                                                    {{field ../../../this model=../../../this.model template="detail"}}
                                                {{else}}
                                                    {{field ../../../this model=../../../this.model template=../../../this.action}}
                                                {{/if}}
                                                </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    {{#if hide}}
                        <button class="btn-link btn-invisible btn-toggle less">
                            {{str "LBL_SHOW_LESS"}}
                        </button>
                    {{/if}}
                </div>
            {{/each}}
        </div>

        <div id="list_layout" class="console-config-fields">
            {{#each meta.list_layout}}
                <h4>
                    {{str label ../this.module}}
                </h4>
                {{#each fields}}
                    <div class="row-fluid{{#if ../css_class}} {{../../css_class}}{{/if}}">
                        <div class="{{#if span}}span{{span}}{{/if}} record-cell">
                            {{#if label}}
                                {{#unless dismiss_label}}
                                    <div class="record-label pipeline-record-label" data-name="{{../name}}">
                                        <h5>
                                            {{str label ../../../../this.module}}
                                        </h5>
                                    </div>
                                {{/unless}}
                            {{/if}}
                            <span class="normal">
                                {{field ../../this model=../../this.model template=../../this.action}}
                            </span>
                        </div>
                    </div>
                {{/each }}
            {{/each }}
        </div>
    </div>
</div>

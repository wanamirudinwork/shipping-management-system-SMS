<div id="container">
    <div class="pane ui-layout-center">
        <div id="jcore_designer" style='background-image: url("{{this.designerBackgroundImage}}");'></div>
    </div>
    <div id="Error-pane" class="pane ui-layout-south">
        <div id="refreshing-errors">{{str "LBL_PMSE_VALIDATOR_REFRESH_ERROR_LIST" this.module}}</div>
        <table class="table table-striped table-sm" id="Error-table" width="100%">
            <thead>
                <tr>
                    <th style="text-align: left">Element Name</th>
                    <th style="text-align: left">Issue</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="pane ui-layout-north no-border" style="background-color: var(--headerpane-background);">
        <div id="adam_toolbar">
            <div class="pmse-toolbar-buttons">

                <!-- Other Modules -->
                <span id="AdamEventOtherModule" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_OTHER_MODULE_EVENT" this.module}}" class="navbtn othermods p-1.5"><i class="sicon sicon-play"></i></span>

                <span class="navdiv"></span>

                <!-- Wait -->
                <span id="AdamEventTimer" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_WAIT" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-clock"></i></span>

                <!-- Receive Message -->
                <span id="AdamEventReceiveMessage" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_RECEIVE_MESSAGE" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-inbox"></i></span>

                <!-- Send Message -->
                <span id="AdamEventMessage" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_SEND_MESSAGE" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-email"></i></span>

                <span class="navdiv"></span>

                <!-- User Task -->
                <span id="AdamUserTask" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_USER_TASK" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-user"></i></span>

                <!-- Action -->
                <span id="AdamScriptTask" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_ACTION" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-settings"></i></span>

                <span class="navdiv"></span>

                <!-- Exclusive -->
                <span id="AdamGatewayExclusive" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_EXCLUSIVE" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-exclusive"></i></span>

                <!-- Parallel -->
                <span id="AdamGatewayParallel" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_PARALLEL" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-parallel"></i></span>

                <span class="navdiv"></span>

                <!-- End Event -->
                <span id="AdamEventEnd" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_END_EVENT" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-end-event"></i></span>

                <span class="navdiv"></span>

                <!-- Comment -->
                <span id="AdamTextAnnotation" type="draggable" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_COMMENT" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-comment-lg"></i></span>

                <span class="navdiv lg"></span>

                <!-- Undo -->
                <span id="ButtonUndo" type="" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_UNDO" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-reset"></i></span>

                <!-- Redo -->
                <span id="ButtonRedo" type="" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_REDO" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-redo"></i></span>

                <!-- Save -->
                <span id="ButtonSave" type="" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_SAVE" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-save"></i></span>

                <!-- Validate -->
                <span id="ButtonValidate" type="" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_VALIDATE" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-validate"></i></span>

                <!-- Save and Validate -->
                <span id="ButtonSaveValidate" type="" rel="tooltip" title="" data-bs-placement="bottom" data-original-title="{{str "LBL_PMSE_ADAM_DESIGNER_SAVE_AND_VALIDATE" this.module}}" class="navbtn p-1.5"><i class="sicon sicon-sm sicon-save-lg"></i><i class="sicon sicon-sm sicon-validate"></i></span>


{{#with view}}
    <div class="header-user-group">
        {{#if activity.attributes.from_collection.length}}
            <div class="header-user-item flex-wrap">
                <div class="activity-label">{{str 'LBL_FROM'}}</div>
                {{partial 'user' this view=this userField=fromField model=activity}}
            </div>
        {{/if}}

        {{#if activity.attributes.to_collection.length}}
            <div class="header-user-item flex-wrap">
                <div class="activity-label">{{str 'LBL_TO'}}</div>
                {{partial 'user' this view=this userField=toField model=activity}}
            </div>
        {{/if}}

        {{#if activity.attributes.cc_collection.length}}
            <div class="header-user-item flex-wrap">
                <div class="activity-label">{{str 'LBL_CC'}}</div>
                {{partial 'user' this view=this userField=ccField model=activity}}
            </div>
        {{/if}}

        {{#if activity.attributes.bcc_collection.length}}
            <div class="header-user-item flex-wrap">
                <div class="activity-label">{{str 'LBL_BCC'}}</div>
                {{partial 'user' this view=this userField=bccField model=activity}}
            </div>
        {{/if}}
    </div>
{{/with}}

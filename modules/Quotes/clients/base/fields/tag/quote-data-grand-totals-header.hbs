<div class="record-label quote-totals-row-label ellipsis_inline" title="{{label}}">{{label}}</div>

{{#if value.length}}
    <div class="tags flex flex-wrap">
        {{#each value}}
            <span class="tag-wrapper">
                <span class="tag-name ellipsis_inline block overflow-hidden" rel="tooltip" data-bs-placement="bottom"
                      title="{{#if name}}{{name}}{{else}}{{this}}{{/if}}">
                <a class="tag-name ellipsis-inline block overflow-hidden" href="#search/?tags={{encodedValue}}" track="click:{{name}}"
                   data-action="tag-search" data-tag="{{#if name}}{{name}}{{else}}{{this}}{{/if}}">
                    {{#if name}}{{name}}{{else}}{{this}}{{/if}}
                </a>
                </span>
            </span>
        {{/each}}
    </div>
{{/if}}

<div class="docusign-settings">
    {{#if isLoading}}
        <div style="text-align:center;">
            <div id="loading_icon">
                <i class="sicon sicon-lg sicon-refresh sicon-is-spinning margin-bottom" style="width:50px"></i>
            </div>
        </div>
    {{else}}
        <div class="row-fluid record-panel">
             {{#each meta.fields}}
                <div class="row-fluid record-panel-content" style="display: block;">
                    <p>
                        {{str label 'DocuSignEnvelopes'}}:
                    </p>
                    {{field ../this model=../../model template="edit"}}
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>

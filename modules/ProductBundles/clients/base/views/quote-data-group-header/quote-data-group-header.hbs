<tr class="flex-list-row-header left-0 quote-data-group-header stick-left ui-not-droppable ltr:[&>td:not(:first-child)]:left-[72px] rtl:[&>td:not(:first-child)]:right-[72px]" name="{{model.module}}_{{model.cid}}">
    <td class="absolute flex focus-within:z-30 justify-evenly two-dropdowns z-10"{{#if name}} data-fieldname="{{name}}"{{/if}}>
        <span class="absolute action-button-wrapper inset-0 left-column-save-cancel px-2 py-1">
            {{#each leftSaveCancelColumn}}
                {{field ../this model=../model template=../viewName}}
            {{/each}}
        </span>
        <span class="absolute action-button-wrapper inset-0 left-column-buttons p-2">
            {{#each leftColumns}}
                {{field ../this model=../model template=../viewName}}
            {{/each}}
        </span>
    </td>
    {{#each _fields}}
        <td class="relative{{#if align}} {{align}}{{/if}}" data-type="{{type}}" colspan="{{../listColSpan}}">
            <div class="quote-data-group-title">
                <span class="group-loading-icon">
                    <i class="sicon sicon-refresh sicon-is-spinning"></i>
                </span>
                {{field ../this model=../model template=../viewName}}
            </div>
        </td>
    {{/each}}
</tr>

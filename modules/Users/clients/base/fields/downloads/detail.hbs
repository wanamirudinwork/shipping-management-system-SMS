{{#if loading}}
    {{str 'LBL_LOADING'}}
{{else}}
    {{{str 'LBL_PLUGINS_DESC'}}}
    {{#each _pluginCategories}}
        {{#if plugins}}
            <div class="[&:not(:last-child)]:border-b border-light py-5" data-name="{{@key}}">
                <div class="font-bold">
                    {{name}}
                </div>
                <div class="mt-3">
                    {{desc}}
                </div>
                <ul class="mt-3">
                    {{#each plugins}}
                        <li><a href="{{link}}">{{label}}</a></li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
    {{/each}}
{{/if}}



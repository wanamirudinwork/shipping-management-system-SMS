<div class="flex flex-row justify-items-start gap-x-11">
    <div>
        <span class="ellipsis_inline pb-1.5 text-xs" data-placement="bottom" title="{{str 'LBL_AVAILABLE_MODULES' module}}">
            {{str 'LBL_AVAILABLE_MODULES' module}}
        </span>
        <ul class="sortable-list sortable-list bg-[--foreground-base] border border-[--border-base] h-72 list-none ml-0 overflow-auto rounded w-48" data-name="display">
            {{#each value.display}}
                <li class="sortable-list-item cursor-move" data-name="{{this}}">
                    <span class="relative ellipsis_inline my-1 mx-2 py-0.25 pl-1 pr-4 bg-[--config-pill-background] rounded" data-placement="bottom" title="{{getModuleName this plural=true}}">
                        {{getModuleName this plural=true}}
                        <i class="sicon sicon-sm sicon-remove absolute top-1 right-1 cursor-pointer"></i>
                    </span>
                </li>
            {{/each}}
        </ul>
    </div>
    <div>
        <span class="ellipsis_inline pb-1.5 text-xs" data-placement="bottom" title="{{str 'LBL_HIDDEN_MODULES' module}}">
            {{str 'LBL_HIDDEN_MODULES' module}}
        </span>
        <ul class="sortable-list bg-[--foreground-base] border border-[--border-base] h-72 list-none ml-0 overflow-auto rounded w-48" data-name="hide">
            {{#each value.hide}}
                <li class="sortable-list-item cursor-move" data-name="{{this}}">
                    <span class="relative ellipsis_inline my-1 mx-2 py-0.25 pl-1 pr-4 bg-[--config-pill-background] rounded" data-placement="bottom" title="{{getModuleName this plural=true}}">
                        {{getModuleName this plural=true}}
                        <i class="sicon sicon-sm sicon-remove absolute top-1 right-1 cursor-pointer hide"></i>
                    </span>
                </li>
            {{/each}}
        </ul>
    </div>
</div>

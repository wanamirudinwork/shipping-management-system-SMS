<div class="border border-[--border-color-light] rounded bg-[--foreground-base] w-1/3 min-w-[25rem] py-5 px-8">
    <div class="text-lg font-bold">
        {{str 'LBL_CHANGE_YOUR_PASSWORD'}}
    </div>
    {{#if _requirements}}
        <div class="text-base my-2">
            {{str 'LBL_PASSWORD_REQUIREMENTS'}}:
        </div>
        <ul>
            {{#each _requirements}}
                <li>
                    {{label}}
                    {{#if sublabel}}
                        <ul>
                            <li>{{sublabel}}</li>
                        </ul>
                    {{/if}}
                </li>
            {{/each}}
        </ul>
    {{/if}}
    <div class="flex flex-col">
        {{#each meta.fields}}
            {{field ../this model=../this.model template='edit'}}
        {{/each}}
    </div>
    <div class="flex flex-row w-full justify-end">
        {{#each meta.buttons}}
            {{field ../this model=../this.model template='edit'}}
        {{/each}}
    </div>
</div>

<div class="action-items-inner flex flex-wrap">
    {{#each items}}
        <div class="action-item flex flex-[50%] flex-nowrap items-center gap-x-3 my-2">
            {{#if customIcon}}
                <img src="{{customIcon}}" border="0" align="absmiddle" alt="{{str label ../../module}}">
            {{else}}
                <i class="sicon {{icon}}"></i>
            {{/if}}
            <span class="action-item-label"
                {{#if tooltip}}
                  rel="tooltip"
                  data-bs-placement="bottom"
                  data-html="true"
                  title="{{str tooltip ../../module}}"
                {{/if}}
            >
                {{#if href}}
                    <a href="{{href}}" {{#if target}}target="{{target}}"{{/if}} {{#if onclick}}{{{onclick}}}{{/if}}>
                        {{str label ../../module}}
                    </a>
                {{/if}}
            </span>
        </div>
    {{/each}}
</div>

{{#if appIsSynced}}
    <span class="animated-background inline-block absolute bg-sidebar-item-default h-8 w-8 -translate-x-7 rtl:translate-x-7 rounded-sm z-10 group-[.active]/nav-item:translate-x-3 rtl:group-[.active]/nav-item:-translate-x-3"></span>
    {{#if route}}
        <a class="sidebar-nav-item-btn absolute bg-transparent flex flex-row h-full items-center p-0 rtl:text-right text-base text-left w-full" href="{{route}}" aria-label="{{str label module}}">
            {{partial 'collapsed' this this}}
            {{partial 'expanded' this this}}
        </a>
    {{else}}
        <button class="sidebar-nav-item-btn absolute bg-transparent flex flex-row h-full items-center p-0 rtl:text-right text-base text-left w-full" aria-label="{{str label module}}" {{#if ../track}}track="{{../track}}"{{/if}}>
            {{partial 'collapsed' this this}}
            {{partial 'expanded' this this}}
        </button>
    {{/if}}
    {{#if secondaryAction}}
        <button class="collapsed sidebar-nav-item-kebab fixed left-14 rtl:right-14 bg-sidebar-item-default h-[inherit] focus-within:bg-blue-200 hover:bg-blue-200 group-[.selected]/nav-item:bg-blue-200 group/kebab overflow-hidden p-0 rounded-tr-sm rounded-br-sm w-0" aria-label="{{secondaryActionLabel}}">
            <i class="{{buildIcon 'sicon-kebab'}} text-sidebar-item-default group-hover/kebab:!text-blue-600 group-focus-within/kebab:!text-blue-600 group-[.selected]/nav-item:!text-blue-600 transition-[color] duration-300"></i>
        </button>
        <button class="expanded sidebar-nav-item-kebab absolute bg-transparent hover:bg-sidebar-item-default focus-within:bg-sidebar-item-default group-[.selected]/nav-item:bg-sidebar-item-default h-[inherit] group-[:not(:hover):not(:focus-within):not(.selected)]/nav-item:invisible group/kebab overflow-hidden p-0 right-0 rtl:right-auto rtl:left-0 w-0" aria-label="{{secondaryActionLabel}}">
            <i class="{{buildIcon 'sicon-kebab'}} group-hover/kebab:!text-sidebar-item-default group-focus-within/kebab:!text-sidebar-item-default group-[.selected]/nav-item:!text-sidebar-item-default transition-[color] duration-300"></i>
        </button>
    {{/if}}
{{/if}}

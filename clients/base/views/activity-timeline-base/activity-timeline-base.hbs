<div class="timeline-filter-panel bg-[--foreground-base] border-b border-[--border-base] flex h-10 items-center sticky top-0 z-[1] left-0 right-0">
    <div class="activity-timeline-filter"></div>
    <div class="search-group box-border m-0 shadow-none w-full">
        <input class="search-input h-[26px] mr-[5px] py-1 pr-5 pl-2 w-full" type="text" data-action="search" value="{{searchTerm}}"
            placeholder="{{str 'LBL_BASIC_QUICK_SEARCH'}}" />
        <i class="sicon sicon-close add-on cursor-pointer pr-[0.25rem] top-4{{#unless searchTerm}} hidden{{/unless}}"></i>
    </div>
</div>
<div class="activity-timeline-create"></div>
<div class="activity-timeline-cards min-w-60"></div>
<div class="dashlet-footer">
    <button class="more btn btn-link btn-invisible">{{str "LBL_SHOW_MORE"}}...</button>
</div>

<div class="flex flex-row justify-between">
    <div class="overflow-hidden">
        <div class="ellipsis_inline primary basis-full text-xs" data-bs-placement="bottom" title="" data-original-title="">
            {{#each model.primaryFields}}
                {{#notEq type 'avatar'}}<h3 class="ellipsis_inline ltr:ml-11 rtl:mr-11 mt-0 text-xs">{{/notEq}}
                {{#if highlighted}}
                    {{#if ../../model.viewAccess}}
                        {{#if link}}
                            <span><a href="#{{buildRoute model=../../../../model}}">{{value}}</a></span>
                        {{else}}
                            <span>{{value}}</span>
                        {{/if}}
                    {{else}}
                        <span>{{value}}</span>
                    {{/if}}
                {{else}}
                    {{field ../../view model=../../model template='list'}}
                {{/if}}
                {{#notEq type 'avatar'}}</h3>{{/notEq}}
            {{/each}}
        </div>
        <div class="ellipsis_inline secondary bottom-2.5 ltr:ml-11 rtl:mr-11 relative text-xs" data-bs-placement="bottom" title="" data-original-title="">
            {{#each model.secondaryFields}}
                {{~#if highlighted~}}
                    <span>{{str ../label ../../module}}:</span> <span>{{../value}}</span>{{#unless @last}}, {{/unless}}
                {{~^~}}
                    <span>{{str ../label ../../module}}: </span>{{field ../../view model=../../model template='list'}}{{#unless @last}}, {{/unless}}
                {{~/if~}}
            {{/each}}
        </div>
    </div>
    <div class="shrink-0">
        {{#each view.meta.rowactions.actions}}
            {{field ../view model=../model}}
        {{/each}}
    </div>
</div>

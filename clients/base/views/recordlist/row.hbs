{{#if rowModel}}
    {{#with rowModel}}
        <tr name="{{module}}_{{attributes.id}}" class="group/row hover:bg-[--primary-content-hover-background] single table-row">
            {{#each ../leftColumns}}
                <td
                    class="bg-[--foreground-base] group-hover/row:bg-[--primary-content-hover-background] sticky ltr:stick-left rtl:stick-right ltr:left-0 rtl:right-0 ltr:sticky-border-tl rtl:sticky-border-tr table-cell z-10"
                >
                    {{field ../../this model=../this template=../../viewName}}
                </td>
            {{/each}}
            {{#each ../_fields.visible}}
                <td class="bg-[--foreground-base] group-hover/row:bg-[--primary-content-hover-background]{{#if align}}{{align}}{{/if}}{{#if ../../isFirstColumnFreezed}}{{#if @first}} sticky stick-first{{#eq ../../leftColumns.length 0}} ltr:left-0 rtl:right-0{{/eq}}{{/if}}{{/if}} table-cell" data-type="{{type}}">
                    {{field ../../this model=../this template=../../viewName}}
                </td>
            {{/each}}
            {{#each ../rightColumns}}
                <td class="bg-[--foreground-base] absolute focus-within:z-20 group-hover/row:bg-[--primary-content-hover-background] group-[.frozen-list-headers]/records:sticky items-center justify-center ltr:right-0 rtl:left-0 ltr:stick-right rtl:stick-left ltr:sticky-border-tr rtl:sticky-border-tl table-cell z-10">
                    {{field ../../this model=../this template=../../viewName}}
                </td>
            {{/each}}
        </tr>
    {{/with}}
{{else}}
    <tr name="{{module}}_{{model.id}}" class="group/row hover:bg-[--primary-content-hover-background] single table-row">
        {{#each view.leftColumns}}
            <td class="bg-[--foreground-base] group-hover/row:bg-[--primary-content-hover-background] sticky ltr:stick-left rtl:stick-right ltr:left-0 rtl:right-0 ltr:sticky-border-tl rtl:sticky-border-tr table-cell z-10">
                {{field ../view model=../model template=../view.viewName}}
            </td>
        {{/each}}
        {{#each view._fields.visible}}
            <td class="bg-[--foreground-base] group-hover/row:bg-[--primary-content-hover-background]{{#if align}}{{align}}{{/if}}{{#if ../view.isFirstColumnFreezed}}{{#if @first}} sticky stick-first{{#eq ../../../view.leftColumns.length 0}} ltr:left-0 rtl:right-0{{/eq}}{{/if}}{{/if}} table-cell" data-type="{{type}}">
                {{field ../view model=../model template=../view.viewName}}
            </td>
        {{/each}}
        {{#each view.rightColumns}}
            <td class="absolute bg-[--foreground-base] focus-within:z-20 group-hover/row:bg-[--primary-content-hover-background] group-[.frozen-list-headers]/records:sticky items-center justify-center ltr:right-0 rtl:left-0 ltr:stick-right rtl:stick-left ltr:sticky-border-tr rtl:sticky-border-tl table-cell">
                {{field ../view model=../model template=../view.viewName}}
            </td>
        {{/each}}
    </tr>
{{/if}}

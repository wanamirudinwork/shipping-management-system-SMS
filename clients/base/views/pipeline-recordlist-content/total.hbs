{{#if isDataFetched}}
    <div class="total-amount mr-4">
        {{#if showPreferredCurrency}}
            <div class="text-4xl py-1 ellipsis_inline" title="{{headerTotalPreferred}}">
                {{headerTotalPreferred}}
            </div>
            <div class="text-2xl ellipsis_inline" title="{{headerTotal}}">
                {{headerTotal}}
            </div>
        {{else}}
            <div class="text-4xl py-1 ellipsis_inline" title="{{headerTotal}}">
                {{headerTotal}}
            </div>
        {{/if}}
    </div>
{{else}}
    {{!-- column total Skeleton loader --}}
    <div class="
        bg-left
        bg-no-repeat
        bg-skl-column-total
        dark:bg-skl-column-total-dark
        h-full
    "></div>
{{/if}}

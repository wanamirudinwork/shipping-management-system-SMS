<div class='tile portlet mb-4 p-0.5 rounded-lg bg-[--foreground-base] text-sm hover:shadow-md'>
    <div class='pipeline-tile min-h-[3.125rem] hover:cursor-pointer'>
        {{#each meta.tileDef.panels}}
            {{#if is_header}}
                <div class='tile-header portlet-header py-0.5 pr-1.25 pl-2.5 font-bold'>
                    <div class='name ellipsis_inline'>
                        {{#each fields}}
                            <div data-type="{{type}}">
                                {{field ../../../view model=../../../model template='list'}}
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{else}}
                <div class='tile-body pb-1.25 pr-1.25 pl-2.5'>
                    <div class='info-container tile-field-wrapper ml-0 w-full'>
                        {{#each fields}}
                            <div class="mb-1" data-type="{{type}}">
                                {{#eq type 'currency'}}
                                    {{field ../../../../view model=../../../../model template='tile'}}
                                {{else}}
                                    {{field ../../../../view model=../../../../model template='list'}}
                                {{/eq}}
                            </div>
                        {{/each}}
                    </div>
                    <div class='clearfix'></div>
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>

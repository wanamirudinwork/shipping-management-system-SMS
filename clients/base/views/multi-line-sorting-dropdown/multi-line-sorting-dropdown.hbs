<div class="flex flex-row items-center ltr:ml-5 rtl:mr-5 sorting-dropdown">
    <div class="ltr:mr-2.5 rtl:ml-2.5">{{#if isPrimary}}{{str 'LBL_PRIMARY_SORT'}}{{else}}{{str 'LBL_SECONDARY_SORT'}}{{/if}}</div>
    <div class="sorting-dropdown-select w-40">
        <select class="w-full">
            {{#unless isPrimary}}
                <option value=""></option>
                <option value=""></option>
            {{/unless}}
            {{#each this.dropdownFields}}
                <option value="{{name}}">{{str label ../module}}</option>
            {{/each}}
        </select>
    </div>
    <div class="sorting-dropdown-arrow disabled">
        <i class="sicon sicon-arrow-down"></i>
    </div>
</div>

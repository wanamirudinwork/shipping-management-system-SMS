<div class="alert-page-overlay"></div>
<div class="alert-confirmation">
    <div class="alert {{alertClass}} alert-block rounded-md shadow-lg bg-[--alert-background] block m-auto"
         aria-modal="true" role="dialog" tabindex="-1" aria-label="{{str 'LBL_CONFIRMATION_POPUP'}}">
        <div class="flex">
            <div class="{{indicatorClass}}  pt-5 px-4">
                <i class="sicon sicon-32 {{alertIcon}}"></i>
            </div>
            <span class="text pt-5 pr-4">
                {{#if title}}
                    <strong>{{title}}:</strong>
                {{/if}}
                {{#each messages}}{{./this}}{{/each}}
            </span>
        </div>
        <div class="row-fluid flex justify-end">
            <a class="alert-btn-cancel px-4 py-4 font-bold uppercase"
               data-action="cancel" role="button">{{str alert.cancelLabel}}</a>
            <a class="alert-btn-confirm px-4 py-4 font-bold uppercase"
               data-action="confirm" role="button">{{str alert.confirmLabel}}</a>
        </div>
    </div>
</div>

{{#unless noConnection}}
    <div class="btn-group cd-radio-buttons !flex flex-wrap-no !static" data-toggle="buttons-radio">
        <div rel="tooltip" data-bs-placement="bottom" title="{{str 'LBL_DASHLET_REFRESH_LABEL'}}">
            <button class="btn mr-1 refreshPath">
                <i class="sicon sicon-refresh"></i>
            </button>
        </div>
        <div rel="tooltip" data-bs-placement="bottom" title="{{#if ../displayingSites}}{{str 'LBL_NO_FOLDER_CREATE'}}{{else}}{{#if ../displayingDocumentDrives}}{{str 'LBL_NO_FOLDER_CREATE'}}{{else}}{{str 'LBL_NEW_FOLDER'}}{{/if}}{{/if}}">
            <button class="btn mr-1 newFolder {{#if ../displayingSites}}disabled{{/if}} {{#if ../displayingDocumentDrives}}disabled{{/if}}" rel="popover">
                <i class="sicon sicon-folder"></i>
            </button>
        </div>
        <div rel="tooltip" data-bs-placement="bottom" title="{{#if ../displayingSites}}{{str 'LBL_NO_FILE_UPLOAD'}}{{else}}{{#if ../displayingDocumentDrives}}{{str 'LBL_NO_FILE_UPLOAD'}}{{else}}{{str 'LBL_UPLOAD_FILE'}}{{/if}}{{/if}}">
            <button class="btn mr-1 uploadFile {{#if ../displayingSites}}disabled{{/if}} {{#if ../displayingDocumentDrives}}disabled{{/if}}" rel="popover">
                <i class="sicon sicon-upload"></i>
            </button>
        </div>
        {{#notEq ../options.driveType 'sharepoint'}}
            <button class="btn btn-primary {{#unless sharedWithMe}}active{{/unless}} toggleShared" data-sharedwithme="false">{{str "LBL_MY_FILES"}}</button>
            <button class="btn btn-primary {{#if sharedWithMe}}active{{/if}} toggleShared" data-sharedwithme="true">{{str "LBL_SHARED_WITH_ME"}}</button>
        {{/notEq}}
    </div>
{{/unless}}

<ul class="nav megamenu">
    <li class="dropdown notification-list">
        <div class="btn-group pr-1" data-name="notifications-list-button">
            <button class="btn btn-invisible btn-notification dropdown-toggle group/dropdown-toggle"
                data-bs-toggle="dropdown"
                aria-label="{{str "LBL_NOTIFICATIONS" module}}"
                role="button"
                aria-haspopup="true"
                aria-expanded="false"
            >
                <span class="{{buildIcon 'sicon-bell-lg-line'}} bg-blue-600 dark:bg-blue-300 border-0 !h-8 !inline-flex items-center justify-center outline outline-2 outline-blue-300 dark:outline-blue-800 group-[:not(:hover):not(:focus-within):not(.show)]/dropdown-toggle:outline-0 rounded-full text-base !text-white dark:!text-gray-800 !w-8"></span>
                {{#if this.collection.length}}
                    <span class="absolute left-5 min-w-[0.75rem] max-w-[1.125rem] rounded-full p-0.5 text-2xs bg-red-500 text-white -top-1">
                        {{this.collection.length}}{{#if this.collection.next_offset}}{{#notEq this.collection.next_offset "-1"}}+{{/notEq}}{{/if}}
                    </span>
                {{/if}}
                {{tooltipTemplate (str 'LBL_NOTIFICATIONS' module) 'bottom'}}
            </button>
            <div class="dropdown-menu ltr:!right-6 rtl:!left-6">
                <ul role="menu">
                    {{#each this.collection.models}}
                        <li{{#if this.attributes.is_read}} class="read"{{/if}} role="menuitem">
                            <a class="row-fluid"
                               href="#{{buildRoute model=this action="detail"}}"
                               data-id="{{this.attributes.id}}"
                               data-action="is-read-handler"
                               tabindex="-1"><span
                                class="span8 ellipsis_inline"
                                title="{{this.attributes.name}}"
                                data-bs-placement="bottom">
                            {{#with ../this.meta.fields.severity}}
                                {{field ../../this model=../this template="detail"}}
                            {{/with}}
                            {{this.attributes.name}}</span>
                            {{relativeTime this.attributes.date_entered class="span4 pull-right"}}
                            </a>
                        </li>
                    {{/each}}
                    <li role="menuitem">
                        <a href="#{{module}}" tabindex="-1">
                            <i class="sicon sicon-list-view"></i>
                            <span class="ellipsis_inline">{{str "LBL_SHOW_NOTIFICATIONS" module}}</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </li>
</ul>

<h1 class="mx-4 mt-4 mb-6">{{str "LBL_REPORTS_DASHLET_DATATABLE_PREVIEW"}}</h1>
<div class="dashlet-container h-full rounded-lg mx-4 mb-4 p-0 hover:shadow-md bg-[--foreground-base]">
    <div class="dashlet h-full flex flex-col relative p-0 mb-0 border-none">
        <div class="dashlet-header border-b border-[--border-base] dark:border-none flex flex-row items-center m-0.75">
            <h4 class="dashlet-title flex-grow m-0 ml-1.5 overflow-hidden">{{str _dashletTitle}}</h4>
        </div>
        <div class="dashlet-content flex-grow scroll">
            <div class="btn-group p-2">
                <button class="btn">
                    <i class="sicon sicon-add-dashlet-lg"></i>
                </button>
                <button class="btn active">
                    <i class="sicon sicon-data-table"></i>
                </button>
                <button class="btn">
                    <i class="sicon sicon-filter"></i>
                </button>
            </div>
            <div class="mt-2 nav-tabs"></div>
            <div data-container="previewBody">
                <div class="{{_reportType}}"></div>
                {{#if _showFooter}}
                    <div class="flex-list-view-container h-full">
                        <div class="flex-list-view-content h-full overflow-auto relative">
                            <div class="report-panel-footer flex items-center p-1">
                                <div class="table-total-skeleton-loader w-30"></div>
                            </div>
                        </div>
                    </div>
                {{/if}}
            <div>
        </div>
    </div>
</div>

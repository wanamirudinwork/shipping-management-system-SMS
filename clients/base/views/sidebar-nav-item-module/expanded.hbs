<span class="expanded ellipsis_inline h-full inline-block ltr:pr-[1.125rem] rtl:pl-[1.125rem] w-full group-hover/nav-item:bg-gray-100 group-focus-within/nav-item:bg-gray-100 dark:group-hover/nav-item:bg-gray-800/50 dark:group-focus-within/nav-item:bg-gray-800/50" data-bs-placement="{{tooltipPlacement}}" title="{{str label module}}">
    <span class="h-full w-14 inline-flex items-center justify-center module-color-{{color}} text-[--sicon] group-hover/nav-item:!text-module-default group-focus-within/nav-item:!text-module-default group-[.active]/nav-item:!text-module-default group-[.selected]/nav-item:!text-module-default {{#unless useAbbreviation}}{{buildIcon icon}}{{/unless}} relative transition-[color] duration-300 z-20">
        {{#if useAbbreviation}}
            {{abbreviation}}
        {{/if}}
    </span>
    <span class="text-sm text-gray-500 dark:text-gray-400 group-hover/nav-item:font-semibold group-focus-within/nav-item:font-semibold">
        {{str label module}}
    </span>
</span>

{{#if dropdownList}}
    <div class="flex pull-right tag-group-wrapper">
        <div class="btn btn-invisible tag-dropdown justify-between min-w-[2.5rem] p-2">
            <span class="bg-blue-300 border-none ellipsis_inline font-semibold max-w-[3rem] py-0.5 px-2 rounded-full text-blue-800 text-xs" aria-label="{{str 'LBL_GLOBAL_SEARCH_MODULE_FILTER'}}" title="{{../dropdownName}}">{{../dropdownName}}</span>
            <div class="align-top mt-0 ltr:ml-0 rtl:mr-0 p-0" track="click:globalsearch-dropdown">
                <i class="sicon sicon-chevron-down ltr:ml-1 rtl:mr-1 text-white"></i>
            </div>
        </div>
        <ul class="dropdown-menu tag-dropdown-list mx-0 overflow-y-auto !right-auto w-[12.5rem]">
            {{#each selectedTags}}
                <li class="tag-name menu-item cursor-pointer" id={{id}} tag-name="{{name}}">
                    <i class="{{buildIcon 'sicon-check'}}"></i>
                    <span class="ellipsis_inline" data-bs-placement="bottom" title="{{name}}">{{name}}</span>
                </li>
            {{/each}}
        </ul>
    </div>
{{else}}
    {{#each selectedTags}}
        {{partial 'tag' ../this this}}
    {{/each}}
{{/if}}


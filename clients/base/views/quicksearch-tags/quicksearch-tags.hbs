<div class="quicksearch-tags absolute bg-white dark:bg-gray-800 border-0 box-border hidden px-0.5 min-w-[10.25rem] rounded-md rounded-b-none shadow-xl top-full w-auto">
    <div class="qs-tags-row qs-tag-icon ltr:border-r rtl:border-l border-[--border-base] px-2.5 flex items-center"><i class="{{buildIcon 'sicon-tag'}}"></i></div>
    {{#if tagCollection}}
        <ul class="tags flex flex-wrap list-none py-1">
            {{#each tagCollection}}
                <li class="tag-wrapper">
                    <div class="tag-name qs-tag align-middle inline-block leading-3 overflow-hidden text-ellipsis text-xs whitespace-nowrap" rel="tooltip" data-placement="bottom" title="{{name}}">
                        <a class="tag-name block border-t-0 overflow-hidden p-1" href="javascript:void(0);" track="click:{{name}}">{{name}}</a>
                    </div>
                </li>
            {{/each}}
        </ul>
    {{/if}}
</div>

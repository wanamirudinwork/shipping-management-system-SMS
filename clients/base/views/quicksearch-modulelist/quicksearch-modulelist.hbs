<div class="flex pull-right module-wrapper relative">
    <div class="btn btn-invisible module-dropdown justify-between hide" id="module-dropdown"
         data-bs-toggle="dropdown" tabindex="0" role="button" style="display: none">
        <span data-label="module-icons">
            {{partial 'module-avatar' this this.moduleIcons}}
        </span>
        <div track="click:globalsearch-dropdown">
            <i class="sicon sicon-chevron-down ltr:ml-1 rtl:mr-1 text-white"></i>
        </div>
    </div>
    <ul class="dropdown-menu module-dropdown-list mx-0" role="menu">
        <li class="menu-item menu-item-select-all cursor-pointer ellipsis_inline group/menu-item selected [&.selected]:font-semibold [&.selected]:bg-[--quick-search-module-list-bg-hover]" data-action="select-all"
            title="{{str 'LBL_SELECT_ALL_TITLE'}}" role="menuitem"
        >
            <i class="{{buildIcon 'sicon-check'}} bg-gray-400 group-[:not(.selected)]/menu-item:!hidden rounded-sm text-white"></i>
            <i class="{{buildIcon 'sicon-minus'}} border-2 border-[--sicon] box-border group-[.selected]/menu-item:!hidden rounded-sm"></i>
            <span>{{str 'LBL_SEARCH_ALL_MODULES'}}</span>
        </li>
        {{#each searchModuleFilter.models}}
            <li class="menu-item cursor-pointer ellipsis_inline group/menu-item [&.selected]:font-semibold" data-module="{{id}}"
                data-action="select-module" title="{{getModuleName id plural=true}}" role="menuitem"
            >
                {{moduleLabel id 'sm' class='group-[:not(.selected):not(:hover)]/menu-item:bg-transparent group-[:not(.selected):not(:hover)]/menu-item:text-[--sicon] mr-2'}}
                <span>{{getModuleName id plural=true}}</span>
            </li>
        {{/each}}
    </ul>
</div>

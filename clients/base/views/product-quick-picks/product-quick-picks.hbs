<div class="dashboard quotes-create">
    <div class="cols row-fluid">
        <ul class="dashlets row-fluid">
            <li class="span12">
                <ul class="dashlet-row">
                    <li class="row-fluid">
                        <div class="rows well well-invisible">
                            <ul class="dashlet-cell rows row-fluid">
                                <li class="dashlet-container h-full rounded-lg mx-2 mb-4 p-0 pt-0.5 pb-1 border border-[--border-base] dark:border-none hover:shadow-md bg-[--foreground-base]">
                                    <div
                                        class="dashlet h-full flex flex-col relative p-0 mb-0 border-none"
                                        data-type="dashlet"
                                    >
                                        <div data-dashlet="toolbar">
                                            <div class="dashlet-header border-b border-[--border-base] dark:border-none flex flex-row items-center h-11 px-4 ui-draggable-handle m-0.75">
                                                <h4 data-toggle="dashlet" class="dashlet-title text-initial m-0 ml-1.5">
                                                    {{str 'LBL_PRODUCT_QUICK_PICKS_DASHLET_NAME' }}
                                                </h4>
                                            </div>
                                        </div>
                                        <div data-dashlet="dashlet" class="dashlet-content">
                                            <div class="dashlet-unordered-list recent-used-product">
                                                <div class="dashlet-tabs sticky top-0 z-[200] tab{{tabs.length}}">
                                                    {{{tabsHtml}}}
                                                </div>
                                                <div class="tab-content">
                                                    {{{recordsHtml}}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>

<div class="dashlet-open-container flex items-center">
    {{#if enableTitleLink}}
    <a class="ellipsis_inline" href="javascript:void(0);" data-bs-placement="bottom" data-original-title="{{value}}" data-link-target="{{linkTarget}}" data-module="{{module}}" data-model-id="{{modelId}}">{{value}}</a>
    {{else}}
    <span class="ellipsis_inline" data-bs-placement="bottom" title="{{value}}">
        {{value}}
    </span>
    {{/if}}
    <a class="dashlet-open-icon-container"
       href="#{{buildRoute model=model}}"
       rel="tooltip"
       data-bs-placement="bottom"
       title="{{str 'LBL_OPEN_RECORD_VIEW'}}">
        <i class="dashlet-open-icon sicon sicon-arrow-top-right"></i>
    </a>
</div>

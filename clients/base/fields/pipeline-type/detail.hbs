<div class="filter-box">
    {{#eq tabs.length 1}}
        <h1 class="pipeline-header">
            {{tabs.0.tabLabel}}
        </h1>
    {{else}}
        <ul class="nav nav-tabs pull-left">
            {{#each tabs}}
                <li class="tab tab-pipeline flex-grow h-6 ltr:ml-2 rtl:mr-2 hover:bg-[--tab-background-hover-color]{{#eq ../value moduleField}} active-tab{{/eq}}">
                    <a class="text-center pipeline-stage" data-pipeline="{{moduleField}}" name="pipelineBtn">
                        <span class="tab-title font-semibold">{{tabLabel}}</span>
                    </a>
                </li>
            {{/each}}
        </ul>
    {{/eq}}
</div>

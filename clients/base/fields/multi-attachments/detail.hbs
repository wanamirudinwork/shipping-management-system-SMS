<div class="select2-container select2-container-multi select2-choices-pills-close
    select2 span12 multi-attachments-detail-view">
    <ul class="select2-choices">
        {{#each value}}
        <li class="select2-search-choice">
            <div>
                <span class="select2-choice-type">
                    <a class="ellipsis_inline !flex leading-[18px] !m-0 !p-0"
                       rel="tooltip"
                       data-original-title="{{fileName}}{{fileExt}}"
                       data-action="link"
                       href="{{url}}"
                       data-url="{{url}}"
                       target="_blank">
                        <span class="block max-w-[100px] overflow-hidden text-ellipsis">{{fileName}}</span>
                        <span>{{fileExt}}</span>
                    </a>
                </span>
            </div>
        </li>
        {{/each}}
        {{#if value}}
        <li>
            <button class="btn-link btn-invisible multi-attach-download-all-btn" data-action="download-all">
                <i class="sicon sicon-download"></i>
                {{#eq value.length 1}}
                    {{str 'LBL_DOWNLOAD_ONE' this.module}}
                {{else}}
                    {{str 'LBL_DOWNLOAD_ALL' this.module}}
                {{/eq}}
            </button>
        </li>
        {{/if}}
    </ul>
</div>
{{#if singleImage }}
    <a class="attachment-preview"
       data-action="open-preview"
       data-bs-placement="bottom"
       title="{{value.[0].name}}"
       href="{{value.[0].url}}"
       data-url="{{value.[0].url}}"
       target="_blank">
        <img src="{{value.[0].url}}"  alt="{{value.[0].name}}"/>
    </a>
{{/if}}

<div class="comment-log-dashlet-content">
    <div class="new-comment flex justify-center m-2.5 relative">
        <textarea class="taggable box-border h-16 resize-none w-full" placeholder="{{str "LBL_COMMENTS_LOG_DASHLET_PLACEHOLDER"}}"></textarea>
        <button data-action="save" class="btn btn-primary btn-mini commentSubmit absolute bottom-2 ltr:right-2 rtl:left-2" value="{{str "LBL_COMMENTS_LOG_DASHLET_BUTTON_ADD"}}" >{{str "LBL_COMMENTS_LOG_DASHLET_BUTTON_ADD"}}</button>
    </div>
    <ul class="clear-both list-none m-0">
        {{#if this.msgs}}
            {{#each msgs}}
            <li id="{{ id }}" class="border-t border-[--border-base] p-2.5" data-comment-expanded="{{#if entryShort}}{{#if expandEntry}}true{{else}}false{{/if}}{{/if}}">
                <div class="header flex flex-nowrap justify-between">
                    {{#if href}}
                        <a title="{{created_by_name}}" href="{{href}}">{{created_by_name}}</a>
                    {{else}}
                        {{created_by_name}}
                    {{/if}}
                    {{relativeTime date_entered class="relative"}}
                </div>
                <div class="body">
                    {{partial 'comment' ../this this}}
                </div>
            </li>
            {{/each}}
        {{else}}
            {{#if view.collection.dataFetched}}
            <em class="block text-center text-[--label-color]">{{str "LBL_COMMENTS_LOG_DASHLET_NO_COMMENTS"}}</em>
            {{else}}
                <div class="block-footer text-center">
                    {{loading 'LBL_ALERT_TITLE_LOADING'}}
                </div>
            {{/if}}
        {{/if}}
    </ul>
</div>
{{#if _showViewAll}}
<div class="block-footer text-left">
    <button data-action="showall" class="btn btn-link btn-invisible more">{{str "LBL_COMMENTS_LOG_DASHLET_VIEW_ALL"}}</button>
</div>
{{/if}}

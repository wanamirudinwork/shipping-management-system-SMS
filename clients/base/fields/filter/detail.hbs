{{#if value}}
    <div class="tags flex flex-wrap">
        <span class="tag-wrapper">
            <span class="tag-name ellipsis_inline block overflow-hidden" rel="tooltip"
                  data-bs-placement="bottom" title="{{value}}">
                <span class="tag-name align-middle ellipsis-inline inline-block overflow-hidden text-xs">
                    {{value}}
                </span>
            </span>
        </span>
    </div>
{{else}}
    {{str "LBL_NO_DATA_AVAILABLE"}}
{{/if}}

{{#if showLoader}}
    {{#times loaderCount}}
        <div class="metric-loader h-full w-full">
            <div class="skeleton-loader"></div>
        </div>
    {{/times}}
{{else}}
    <div class="module-list">
        <ul class="nav megamenu" role="navigation" data-container="metric-tabs">
            <li class="dropdown hidden more p-0" data-action="more-metrics">
                <div class="btn-group p-2">
                    <button type="button" data-bs-toggle="dropdown" class="btn btn-invisible dropdown-toggle p-1"
                            track="click:navbar-more-metrics" role="button" data-bs-display="static"
                    >
                        <span id="more-count"></span>
                        <i class="sicon sicon-chevron-down"></i>
                    </button>
                    <div class="dropdown-menu scroll">
                        <ul data-container="ribbon-overflow" role="menu"></ul>
                    </div>
                </div>
            </li>
        </ul>
    </div>
{{/if}}
